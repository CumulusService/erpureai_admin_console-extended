<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Clear any inherited sources -->
    <clear />
    <!-- Azure Artifacts feed - replace {organization} with your actual organization name -->
    <add key="AzureArtifacts" value="https://pkgs.dev.azure.com/{organization}/_packaging/sap-hana-packages/nuget/v3/index.json" />
    <!-- Public NuGet.org for other packages -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <!-- Package source credentials (handled by Azure Artifacts Credential Provider) -->
  <packageSourceCredentials>
    <AzureArtifacts>
      <add key="Username" value="AzureArtifacts" />
      <!-- Password will be provided by Azure Artifacts Credential Provider or via environment -->
    </AzureArtifacts>
  </packageSourceCredentials>
</configuration>