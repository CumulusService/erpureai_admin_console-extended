<!DOCTYPE html>
<html>
<head>
    <title>Claims Debug</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>User Claims Debug</h1>
        
        <div class="alert alert-info">
            <strong>Authentication Status:</strong> @ViewBag.IsAuthenticated<br>
            <strong>Authentication Type:</strong> @ViewBag.AuthenticationType<br>
            <strong>Name:</strong> @ViewBag.Name<br>
            <strong>Extracted Email:</strong> @ViewBag.ExtractedEmail<br>
            <strong>Is Erpure User:</strong> @ViewBag.IsErpureUser
        </div>

        <h3>All Claims:</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Claim Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in ViewBag.Claims)
                {
                    <tr>
                        <td><code>@claim.Type</code></td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-4">
            <a href="/owner/invite-admin" class="btn btn-primary">Try Invite Admin</a>
            <a href="/" class="btn btn-secondary">Home</a>
        </div>
    </div>
</body>
</html>