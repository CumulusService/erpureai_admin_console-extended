@page "/demo"

<PageTitle>Admin Console Demo</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">Admin Console Demo</h1>
            <p class="text-muted">Multi-tenant B2B admin interface preview</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Secrets</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-key fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Admin Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Organizations</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">4</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Demo Features -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Key Features</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-users text-primary"></i> B2B User Management</h6>
                            <ul class="mb-3">
                                <li>Invite admin and regular users</li>
                                <li>Azure AD B2B guest integration</li>
                                <li>Organization-based isolation</li>
                                <li>Role-based access control</li>
                            </ul>

                            <h6><i class="fas fa-key text-success"></i> Secret Management</h6>
                            <ul class="mb-3">
                                <li>Azure Key Vault integration</li>
                                <li>Tag-based organization filtering</li>
                                <li>Secure secret storage & retrieval</li>
                                <li>Tenant-specific access controls</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-database text-info"></i> Dataverse Integration</h6>
                            <ul class="mb-3">
                                <li>Organization and user tracking</li>
                                <li>Multi-tenant data isolation</li>
                                <li>Custom entity support</li>
                                <li>Audit trail capabilities</li>
                            </ul>

                            <h6><i class="fas fa-shield-alt text-warning"></i> Security Features</h6>
                            <ul class="mb-3">
                                <li>Azure AD authentication</li>
                                <li>Managed identity support</li>
                                <li>Secure credential handling</li>
                                <li>Enterprise-grade isolation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Sample Users</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>John Admin</strong>
                                <br />
                                <small class="text-muted">john@company1.com</small>
                            </div>
                            <div>
                                <span class="badge bg-warning">Admin</span>
                                <span class="badge bg-success">Active</span>
                            </div>
                        </div>
                        
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Sarah User</strong>
                                <br />
                                <small class="text-muted">sarah@company1.com</small>
                            </div>
                            <div>
                                <span class="badge bg-info">User</span>
                                <span class="badge bg-success">Active</span>
                            </div>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Mike Admin</strong>
                                <br />
                                <small class="text-muted">mike@company2.com</small>
                            </div>
                            <div>
                                <span class="badge bg-warning">Admin</span>
                                <span class="badge bg-secondary">Pending</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Sample Secrets</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-key text-primary me-2"></i>database-connection</span>
                            <small class="text-muted">Company1</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-key text-primary me-2"></i>api-key-external</span>
                            <small class="text-muted">Company1</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-key text-primary me-2"></i>storage-account-key</span>
                            <small class="text-muted">Company2</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <strong>Admin Console:</strong> Configure Azure AD, Key Vault, and Dataverse connections in appsettings.json for full functionality.
            </div>
        </div>
    </div>
</div>

