@page "/developer/system-users"
@using AdminConsole.Services
@using AdminConsole.Models
@using AdminConsole.Components.Shared
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "DevOnly")]
@inject ISystemUserManagementService SystemUserService
@inject IBusinessDomainValidationService BusinessDomainValidationService
@inject IJSRuntime JSRuntime
@inject ILogger<SystemUsers> Logger
@inject INavigationOptimizationService NavigationOptimizer
@rendermode InteractiveServer

<PageTitle>System User Management - Master Developer</PageTitle>

<FastNavigationWrapper LoadingTitle="Loading System Users" 
                       LoadingMessage="Preparing system user management..." 
                       PagePath="/developer/system-users"
                       OnDataLoad="LoadSystemUsersDataAsync">
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-users-cog text-success me-2"></i>
                        System User Management
                    </h2>
                    <p class="text-muted mb-0">Manage all system users, promote roles, and invite new administrators</p>
                </div>
                <div>
                    <button class="btn btn-primary" @onclick="RefreshData">
                        <i class="fas fa-sync-alt me-2"></i>Refresh
                    </button>
                    <button class="btn btn-success ms-2" @onclick="() => ShowInviteModal = true">
                        <i class="fas fa-user-plus me-2"></i>Invite System User
                    </button>
                </div>
            </div>

            <!-- Statistics Cards -->
            @if (statistics != null)
            {
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@statistics.TotalTenantUsers</h4>
                                        <p class="mb-0">Tenant Users</p>
                                    </div>
                                    <i class="fas fa-users fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@statistics.TotalGuestUsers</h4>
                                        <p class="mb-0">Guest Users</p>
                                    </div>
                                    <i class="fas fa-user-friends fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@(statistics.SuperAdminCount + statistics.DeveloperCount)</h4>
                                        <p class="mb-0">System Admins</p>
                                    </div>
                                    <i class="fas fa-user-shield fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@statistics.TotalDatabaseUsers</h4>
                                        <p class="mb-0">Database Users</p>
                                    </div>
                                    <i class="fas fa-database fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <label class="form-label">Filter by domain:</label>
                            <select class="form-select" @onchange="OnDomainFilterChange">
                                <option value="">All domains</option>
                                <option value="erpure.ai">erpure.ai</option>
                                <option value="custom">Custom domain...</option>
                            </select>
                            @if (domainFilter == "custom")
                            {
                                <input class="form-control mt-2" 
                                       @bind="customDomain" @onblur="ApplyCustomDomainFilter" 
                                       placeholder="Enter domain" />
                            }
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Filter by role:</label>
                            <select class="form-select" @onchange="OnRoleFilterChange">
                                <option value="">All roles</option>
                                <option value="Developer">Developer</option>
                                <option value="SuperAdmin">SuperAdmin</option>
                                <option value="OrgAdmin">OrgAdmin</option>
                                <option value="User">Regular User</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Filter by status:</label>
                            <select class="form-select" @onchange="OnStatusFilterChange">
                                <option value="">All statuses</option>
                                <option value="Active">Active</option>
                                <option value="PendingInvitation">Pending Invitation</option>
                                <option value="InvitationExpired">Invitation Expired</option>
                                <option value="Disabled">Disabled</option>
                                <option value="Revoked">Revoked</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading State -->
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading system users...</p>
                </div>
            }
            else
            {
                <!-- Single Unified User Table -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-users-cog me-2"></i>Admin Console Users
                        </h5>
                        <p class="text-muted small mb-0">All system users, roles, and statuses in one comprehensive view</p>
                    </div>
                    <div class="card-body p-0">
                        @if (allUsers.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>User</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                            <th>System Role</th>
                                            <th>Type</th>
                                            <th>Organization</th>
                                            <th>Date Added</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in allUsers)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        @{
                                                            var userIcon = user.UserType switch
                                                            {
                                                                "Tenant" => "fas fa-building text-primary",
                                                                "Guest" => "fas fa-user-plus text-info",
                                                                _ => user.DatabaseRole switch
                                                                {
                                                                    UserRole.Developer => "fas fa-crown text-success",
                                                                    UserRole.SuperAdmin => "fas fa-user-shield text-warning", 
                                                                    UserRole.OrgAdmin => "fas fa-user-tie text-info",
                                                                    UserRole.User => "fas fa-user text-secondary",
                                                                    _ => "fas fa-user-circle text-muted"
                                                                }
                                                            };
                                                        }
                                                        <i class="@userIcon fa-2x me-3"></i>
                                                        <div>
                                                            <div class="fw-medium">@user.DisplayName</div>
                                                            <small class="text-muted">@user.UserType User</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="text-break">@user.Email</span>
                                                </td>
                                                <td>
                                                    <span class="badge @user.StatusBadgeClass" title="Status: @user.Status, BadgeClass: @user.StatusBadgeClass, IsEnabled: @user.IsEnabled">
                                                        @{
                                                            var statusIcon = user.Status switch
                                                            {
                                                                SystemUserStatus.Active => "fas fa-check",
                                                                SystemUserStatus.PendingInvitation => "fas fa-clock",
                                                                SystemUserStatus.InvitationExpired => "fas fa-exclamation-triangle",
                                                                SystemUserStatus.Disabled => "fas fa-ban",
                                                                SystemUserStatus.Revoked => "fas fa-times-circle",
                                                                _ => "fas fa-question"
                                                            };
                                                        }
                                                        <i class="@statusIcon me-1"></i>@user.StatusDisplayName
                                                    </span>
                                                    <!-- Debug info (remove after testing) -->
                                                    @if (System.Diagnostics.Debugger.IsAttached)
                                                    {
                                                        <br><small class="text-muted">Debug: @user.Status | @user.StatusBadgeClass</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (user.DatabaseRole.HasValue)
                                                    {
                                                        <span class="badge @user.RoleBadgeClass" title="@GetRoleDescription(user.DatabaseRole)">
                                                            @{
                                                                var roleIcon = user.DatabaseRole switch
                                                                {
                                                                    UserRole.Developer => "fas fa-crown",
                                                                    UserRole.SuperAdmin => "fas fa-user-shield", 
                                                                    UserRole.OrgAdmin => "fas fa-user-tie",
                                                                    UserRole.User => "fas fa-user",
                                                                    _ => "fas fa-user-slash"
                                                                };
                                                            }
                                                            <i class="@roleIcon me-1"></i>@user.RoleDisplayName
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-dark">
                                                            <i class="fas fa-user-slash me-1"></i>No Role
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge @(user.UserType == "Tenant" ? "bg-primary" : user.UserType == "Guest" ? "bg-info" : "bg-secondary") text-white">
                                                        @user.UserType
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(user.OrganizationName))
                                                    {
                                                        <span>@user.OrganizationName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">System User</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (user.DatabaseCreatedOn.HasValue)
                                                    {
                                                        <span class="text-muted">@user.DatabaseCreatedOn.Value.ToString("MMM dd, yyyy")</span>
                                                    }
                                                    else if (user.CreatedDateTime.HasValue)
                                                    {
                                                        <span class="text-muted">@user.CreatedDateTime.Value.ToString("MMM dd, yyyy")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        @if (!user.HasDatabaseRecord && user.Status != SystemUserStatus.Revoked)
                                                        {
                                                            <button class="btn btn-outline-success" 
                                                                    @onclick="() => ShowPromoteModal(user, UserRole.SuperAdmin)"
                                                                    title="Grant SuperAdmin access - Organization management and user administration">
                                                                <i class="fas fa-user-shield me-1"></i>
                                                                <span class="d-none d-xl-inline">Grant SuperAdmin</span>
                                                            </button>
                                                            <button class="btn btn-outline-primary" 
                                                                    @onclick="() => ShowPromoteModal(user, UserRole.Developer)"
                                                                    title="Grant Developer access - Full system configuration and management">
                                                                <i class="fas fa-crown me-1"></i>
                                                                <span class="d-none d-xl-inline">Grant Developer</span>
                                                            </button>
                                                        }
                                                        else if (user.HasDatabaseRecord)
                                                        {
                                                            <button class="btn btn-outline-warning" 
                                                                    @onclick="() => ShowDemoteModal(user)"
                                                                    title="Change system role or permissions">
                                                                <i class="fas fa-user-cog me-1"></i>
                                                                <span class="d-none d-xl-inline">Edit</span>
                                                            </button>
                                                            <button class="btn btn-outline-danger" 
                                                                    @onclick="() => ShowDeactivateModal(user)"
                                                                    title="Revoke all system access and remove from organization">
                                                                <i class="fas fa-user-times me-1"></i>
                                                                <span class="d-none d-xl-inline">Revoke</span>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted small">No actions available</span>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No users found</h5>
                                <p class="text-muted">No users match the current filter criteria.</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Invite System User Modal -->
@if (ShowInviteModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-plus me-2"></i>Invite New System User
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseInviteModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Email Address *</label>
                            <input type="email" class="form-control @(HasInviteValidationError("email") ? "is-invalid" : "")" 
                                   @bind="inviteModel.Email" @onblur="ValidateInviteEmail" 
                                   placeholder="user@company.com" />
                            @if (HasInviteValidationError("email"))
                            {
                                <div class="invalid-feedback">@GetInviteValidationError("email")</div>
                            }
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Display Name *</label>
                            <input type="text" class="form-control" @bind="inviteModel.DisplayName" 
                                   placeholder="John Smith" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="form-label">System Role *</label>
                            <select class="form-select" @bind="inviteModel.Role">
                                <option value="@UserRole.SuperAdmin">SuperAdmin - Full Organization Access</option>
                                <option value="@UserRole.Developer">Developer - Master System Access</option>
                            </select>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(inviteErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @inviteErrorMessage
                        </div>
                    }
                    
                    @if (inviteResult != null && inviteResult.Success)
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check me-2"></i>
                            User invited successfully! Invitation sent to @inviteResult.UserEmail
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseInviteModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SendInvitation" 
                            disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-paper-plane me-2"></i>Send Invitation
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Promote User Modal -->
@if (showPromoteModal && selectedUser != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @{
                            var roleIcon = promoteTargetRole switch
                            {
                                UserRole.Developer => "fas fa-crown text-success",
                                UserRole.SuperAdmin => "fas fa-user-shield text-warning",
                                _ => "fas fa-user-plus"
                            };
                        }
                        <i class="@roleIcon me-2"></i>Grant @promoteTargetRole Access
                    </h5>
                    <button type="button" class="btn-close" @onclick="ClosePromoteModal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Confirm Role Assignment</strong><br/>
                        You are about to grant <strong>@promoteTargetRole</strong> access to:
                    </div>
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user fa-2x text-muted me-3"></i>
                                <div>
                                    <div class="fw-medium">@selectedUser.DisplayName</div>
                                    <small class="text-muted">@selectedUser.Email</small>
                                </div>
                            </div>
                            <div class="small text-muted">
                                Current Status: <span class="badge @selectedUser.StatusBadgeClass">@selectedUser.StatusDisplayName</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <strong>@promoteTargetRole Access Includes:</strong>
                        <ul class="mb-0 mt-2">
                            @if (promoteTargetRole == UserRole.Developer)
                            {
                                <li>Full system configuration and management</li>
                                <li>User promotion and role management</li>
                                <li>System-wide administrative access</li>
                                <li>Master developer privileges</li>
                            }
                            else if (promoteTargetRole == UserRole.SuperAdmin)
                            {
                                <li>Organization management and administration</li>
                                <li>User invitation and role assignment</li>
                                <li>Organization settings configuration</li>
                                <li>Database and resource management</li>
                            }
                        </ul>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(promoteErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @promoteErrorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ClosePromoteModal">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmPromoteUser" 
                            disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="@roleIcon me-2"></i>Grant @promoteTargetRole Access
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Demote/Edit User Modal -->
@if (showDemoteModal && selectedUser != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-cog text-warning me-2"></i>Edit User Role
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDemoteModal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Change User Role</strong><br/>
                        You are about to modify the role for:
                    </div>
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user fa-2x text-muted me-3"></i>
                                <div>
                                    <div class="fw-medium">@selectedUser.DisplayName</div>
                                    <small class="text-muted">@selectedUser.Email</small>
                                </div>
                            </div>
                            <div class="small text-muted">
                                Current Role: <span class="badge @selectedUser.RoleBadgeClass">@selectedUser.RoleDisplayName</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New Role:</label>
                        <select class="form-select" @bind="selectedNewRole">
                            <option value="@UserRole.Developer">Developer - Master System Access</option>
                            <option value="@UserRole.SuperAdmin">SuperAdmin - Organization Management</option>
                            <option value="@UserRole.OrgAdmin">OrgAdmin - Organization User Management</option>
                            <option value="@UserRole.User">User - Basic Access</option>
                        </select>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(demoteErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @demoteErrorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDemoteModal">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmRoleChange" 
                            disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-user-cog me-2"></i>Update Role
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Deactivate/Revoke User Modal -->
@if (showDeactivateModal && selectedUser != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-times text-danger me-2"></i>Revoke User Access
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDeactivateModal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning: This action will revoke all system access</strong><br/>
                        You are about to revoke access for:
                    </div>
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user fa-2x text-muted me-3"></i>
                                <div>
                                    <div class="fw-medium">@selectedUser.DisplayName</div>
                                    <small class="text-muted">@selectedUser.Email</small>
                                </div>
                            </div>
                            <div class="small text-muted">
                                Current Role: <span class="badge @selectedUser.RoleBadgeClass">@selectedUser.RoleDisplayName</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <strong>This action will:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Remove the user from the database</li>
                            <li>Revoke all application roles in Azure AD</li>
                            <li>Disable access to all admin functions</li>
                            <li>This action can be reversed later if needed</li>
                        </ul>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(deactivateErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @deactivateErrorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeactivateModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmRevokeAccess" 
                            disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-user-times me-2"></i>Revoke Access
                    </button>
                </div>
            </div>
        </div>
    </div>
}
</FastNavigationWrapper>