@page "/Account/AccessDenied"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<PageTitle>Access Denied</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="text-danger mb-3">Access Denied</h2>
                    
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Authorization Required</h5>
                        <p class="mb-0">You don't have permission to access this resource.</p>
                    </div>
                    
                    <div class="mt-4">
                        <h6>Possible reasons:</h6>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-user-shield text-primary me-2"></i>You need <strong>SuperAdmin</strong> role to access admin functions</li>
                            <li><i class="fas fa-building text-info me-2"></i>You may only have <strong>OrgAdmin</strong> access to your organization</li>
                            <li><i class="fas fa-clock text-warning me-2"></i>Your session may have expired</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>Go to Dashboard
                        </a>
                        <a href="/Account/SignOut" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-1"></i>Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>