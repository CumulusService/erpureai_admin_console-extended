@page "/admin/organization-settings"
@page "/admin/organization-settings/{orgId}"
@page "/admin/settings"
@rendermode InteractiveServer
@using AdminConsole.Models
@using AdminConsole.Services
@using System.Security.Cryptography
@inject IOrganizationService OrganizationService
@inject IDataIsolationService DataIsolationService
@inject IDatabaseCredentialService DatabaseCredentialService
@inject ITenantIsolationValidator TenantValidator
@inject NavigationManager Navigation
@inject ILogger<OrganizationSettings> Logger
@attribute [Authorize(Policy = "OrgAdminOrHigher")]

<PageTitle>Organization Settings - ERPURE.AI Admin Console</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1 admin-page-title">Organization Settings</h2>
                    <p class="admin-page-subtitle mb-0">View organization information and SAP integration settings</p>
                </div>
                <div>
                    <button type="button" class="btn btn-outline-info me-2" @onclick="RefreshSettings" disabled="@isRefreshing">
                        @if (isRefreshing)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        else
                        {
                            <i class="fas fa-sync-alt me-1"></i>
                        }
                        Refresh
                    </button>
                    <a href="/admin/database-credentials" class="btn btn-primary">
                        <i class="fas fa-cog me-1"></i>
                        Manage Database Credentials
                    </a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong> @errorMessage
                    <button type="button" class="btn-close" @onclick="ClearMessages"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success:</strong> @successMessage
                    <button type="button" class="btn-close" @onclick="ClearMessages"></button>
                </div>
            }

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 admin-page-subtitle">Loading organization settings...</p>
                </div>
            }
            else if (organization == null)
            {
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Organization Not Found
                    </h6>
                    <p class="mb-0">
                        Unable to load your organization settings. Please contact support if this issue persists.
                    </p>
                </div>
            }
            else
            {
                <div class="row">
                        <!-- Basic Organization Information -->
                        <div class="col-lg-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header admin-card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-building text-primary me-2"></i>
                                        Organization Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="orgName" class="form-label"><strong>Organization Name:</strong></label>
                                        <div class="form-control bg-light">@organization.Name</div>
                                        <div class="form-text">Organization name cannot be changed by admins.</div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="adminEmail" class="form-label"><strong>Admin Email:</strong></label>
                                        <div class="form-control bg-light">@organization.AdminEmail</div>
                                        <div class="form-text">Primary admin contact email.</div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-6">
                                            <label class="form-label"><strong>Created:</strong></label>
                                            <div class="form-control-plaintext">@organization.CreatedOn.ToString("MMM dd, yyyy")</div>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label"><strong>Status:</strong></label>
                                            <div>
                                                <span class="badge @(organization.StateCode == StateCode.Active ? "bg-success" : "bg-secondary")">
                                                    @(organization.StateCode == StateCode.Active ? "Active" : "Inactive")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Database Connections -->
                        <div class="col-lg-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header admin-card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-database text-info me-2"></i>
                                        Database Connections
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label"><strong>Active Database Connections:</strong></label>
                                        @if (databaseCredentials == null || !databaseCredentials.Any())
                                        {
                                            <div class="alert alert-info border-0 mb-0">
                                                <small>
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    No database connections configured. 
                                                    <a href="/admin/database-credentials" class="alert-link">Add your first database connection</a>.
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="list-group">
                                                @foreach (var credential in databaseCredentials.Where(c => c.IsActive).Take(3))
                                                {
                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <div class="fw-bold">@credential.FriendlyName</div>
                                                            <small class="text-muted">@credential.DatabaseType - @credential.DatabaseName</small>
                                                        </div>
                                                        <span class="badge bg-success">Active</span>
                                                    </div>
                                                }
                                                @if (databaseCredentials.Count(c => c.IsActive) > 3)
                                                {
                                                    <div class="list-group-item text-center">
                                                        <small class="text-muted">
                                                            +@(databaseCredentials.Count(c => c.IsActive) - 3) more connections
                                                        </small>
                                                    </div>
                                                }
                                            </div>
                                            <div class="mt-2">
                                                <a href="/admin/database-credentials" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-cog me-1"></i>
                                                    Manage Connections
                                                </a>
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="alert alert-warning border-0 mb-0">
                                        <small>
                                            <i class="fas fa-info-circle text-warning me-1"></i>
                                            <strong>SAP Configuration is now managed per database connection.</strong><br>
                                            All SAP settings are configured in <a href="/admin/database-credentials" class="alert-link text-primary fw-bold">Database Credentials</a> where they are required for each connection.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SAP Configuration Summary -->
                        <div class="col-lg-12 mb-4">
                            <div class="card">
                                <div class="card-header admin-card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-cubes text-warning me-2"></i>
                                        SAP Configuration Summary
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-info border-0 mb-3">
                                        <small>
                                            <i class="fas fa-info-circle me-1"></i>
                                            SAP configuration is now managed at the database level. Each database connection has its own SAP settings.
                                        </small>
                                    </div>
                                    
                                    @if (databaseCredentials == null || !databaseCredentials.Any(c => c.IsActive))
                                    {
                                        <div class="alert alert-warning border-0 mb-0">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                <div>
                                                    <strong>No Active Database Connections</strong><br>
                                                    <small>Configure your first database connection to set up SAP integration settings.</small>
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <a href="/admin/database-credentials" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-plus me-1"></i>
                                                    Add Database Connection
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="row">
                                            @foreach (var credential in databaseCredentials.Where(c => c.IsActive))
                                            {
                                                <div class="col-md-6 mb-3">
                                                    <div class="card border">
                                                        <div class="card-header bg-light">
                                                            <strong>@credential.FriendlyName</strong>
                                                            <small class="text-muted ms-2">(@credential.DatabaseType)</small>
                                                        </div>
                                                        <div class="card-body p-3">
                                                            <div class="row">
                                                                <div class="col-12 mb-2">
                                                                    <small class="text-muted">Service Layer:</small><br>
                                                                    <strong class="small text-dark">
                                                                        @if (!string.IsNullOrWhiteSpace(credential.SAPServiceLayerHostname))
                                                                        {
                                                                            @credential.SAPServiceLayerHostname
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-warning fst-italic">Not configured</span>
                                                                        }
                                                                    </strong>
                                                                </div>
                                                                <div class="col-12 mb-2">
                                                                    <small class="text-muted">API Gateway:</small><br>
                                                                    <strong class="small text-dark">
                                                                        @if (!string.IsNullOrWhiteSpace(credential.SAPAPIGatewayHostname))
                                                                        {
                                                                            @credential.SAPAPIGatewayHostname
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-warning fst-italic">Not configured</span>
                                                                        }
                                                                    </strong>
                                                                </div>
                                                                <div class="col-12 mb-2">
                                                                    <small class="text-muted">Web Client:</small><br>
                                                                    <strong class="small text-dark">
                                                                        @if (!string.IsNullOrWhiteSpace(credential.SAPBusinessOneWebClientHost))
                                                                        {
                                                                            @credential.SAPBusinessOneWebClientHost
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-warning fst-italic">Not configured</span>
                                                                        }
                                                                    </strong>
                                                                </div>
                                                                <div class="col-12">
                                                                    <small class="text-muted">Document Code:</small><br>
                                                                    <strong class="small text-dark">
                                                                        @if (!string.IsNullOrWhiteSpace(credential.DocumentCode))
                                                                        {
                                                                            @credential.DocumentCode
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-warning fst-italic">Not configured</span>
                                                                        }
                                                                    </strong>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <div class="mt-3">
                                            <a href="/admin/database-credentials" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i>
                                                Edit SAP Settings
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Key Vault Configuration (Super Admin Only) -->
                        @if (DataIsolationService.IsCurrentUserSuperAdmin())
                        {
                            <div class="col-lg-12 mb-4">
                                <div class="card">
                                    <div class="card-header admin-card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-key text-secondary me-2"></i>
                                            Key Vault Configuration
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="alert alert-info border-0 mb-3">
                                            <h6><i class="fas fa-info-circle me-2"></i>Azure Key Vault Integration</h6>
                                            <p class="mb-0 small">
                                                Your organization's secrets are stored in Azure Key Vault with organization-specific prefixes. 
                                                Advanced Key Vault settings are managed by Super Admins for security reasons.
                                            </p>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label"><strong>Key Vault URI:</strong></label>
                                                <div class="form-control bg-light">@organization.GetEffectiveKeyVaultUri()</div>
                                                <div class="form-text">Azure Key Vault endpoint for your organization's secrets.</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label"><strong>Secret Prefix:</strong></label>
                                                <div class="form-control bg-light">@organization.GetEffectiveSecretPrefix()</div>
                                                <div class="form-text">Prefix used for your organization's secrets in Key Vault.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                </div>

                <!-- Footer Information -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-secondary">
                        <i class="fas fa-clock text-primary me-1"></i>
                        <span class="fw-medium">Last modified:</span> @organization.ModifiedOn.ToString("MMM dd, yyyy 'at' h:mm tt")
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string? orgId { get; set; }
    
    private Organization? organization;
    private List<DatabaseCredential> databaseCredentials = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private string currentUserOrgId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Use provided orgId parameter if available, otherwise get current user's organization ID
            if (!string.IsNullOrEmpty(orgId))
            {
                currentUserOrgId = orgId;
                Logger.LogInformation("Using provided organization ID from URL parameter: {OrganizationId}", orgId);
            }
            else
            {
                // Get current user's organization ID with tenant validation
                currentUserOrgId = await TenantValidator.GetValidatedOrganizationIdAsync();
                Logger.LogInformation("Using tenant-validated organization ID: {OrganizationId}", currentUserOrgId);
            }
            
            // Load organization data
            organization = await OrganizationService.GetByIdAsync(currentUserOrgId);
            
            // If organization not found by ID and the ID looks like a domain-based ID, try to find by domain
            if (organization == null && currentUserOrgId.Contains("_"))
            {
                Logger.LogInformation("Organization not found by GUID, attempting to find by domain for {OrganizationId}", currentUserOrgId);
                
                // Extract domain from domain-based organization ID (e.g., "erpure_ai" -> "erpure.ai")
                var domain = currentUserOrgId.Replace("_", ".");
                
                // Get all organizations and find the one with matching domain
                var allOrganizations = await OrganizationService.GetAllOrganizationsAsync();
                
                // DEBUG: Log all organizations found
                Logger.LogInformation("Found {Count} organizations in database:", allOrganizations.Count());
                foreach (var org in allOrganizations)
                {
                    Logger.LogInformation("  Organization: Name='{Name}', Domain='{Domain}', Id={Id}", 
                        org.Name, org.Domain, org.OrganizationId);
                }
                Logger.LogInformation("Looking for domain: '{Domain}'", domain);
                
                organization = allOrganizations.FirstOrDefault(o => 
                    string.Equals(o.Domain, domain, StringComparison.OrdinalIgnoreCase));
                
                if (organization != null)
                {
                    Logger.LogInformation("Found organization by domain: {OrganizationName} ({OrganizationId}) for domain {Domain}", 
                        organization.Name, organization.OrganizationId, domain);
                    // Update currentUserOrgId to use the actual organization GUID for database operations
                    currentUserOrgId = organization.OrganizationId.ToString();
                }
                else
                {
                    Logger.LogWarning("No organization found for domain {Domain}", domain);
                    
                    // FALLBACK: If there's only one organization, use it (useful for development/testing)
                    if (allOrganizations.Count() == 1)
                    {
                        organization = allOrganizations.First();
                        Logger.LogInformation("Using single available organization as fallback: {OrganizationName} ({OrganizationId}) - Domain: {Domain}", 
                            organization.Name, organization.OrganizationId, organization.Domain);
                        currentUserOrgId = organization.OrganizationId.ToString();
                    }
                }
            }
            
            if (organization == null)
            {
                errorMessage = "Unable to load your organization settings. Please contact support.";
                Logger.LogWarning("Organization not found for ID {OrganizationId}", currentUserOrgId);
                return;
            }

            // Organization loaded successfully

            // Load database credentials
            try
            {
                // Convert string organization ID to GUID using the same method as ManageDatabaseCredentials
                Guid organizationGuid;
                if (Guid.TryParse(currentUserOrgId, out organizationGuid))
                {
                    // If it's already a valid GUID, use it directly
                    Logger.LogInformation("Using GUID organization ID: {OrganizationId}", organizationGuid);
                }
                else
                {
                    // For domain-based organization IDs, generate a deterministic GUID
                    var orgIdBytes = System.Text.Encoding.UTF8.GetBytes(currentUserOrgId);
                    var hash = System.Security.Cryptography.MD5.HashData(orgIdBytes);
                    organizationGuid = new Guid(hash);
                    
                    Logger.LogInformation("Generated GUID {GeneratedGuid} from organization ID string {OrgIdString}", 
                        organizationGuid, currentUserOrgId);
                }
                
                databaseCredentials = await DatabaseCredentialService.GetByOrganizationAsync(organizationGuid);
                Logger.LogInformation("Loaded {Count} database credentials for organization {OrganizationId}", 
                    databaseCredentials.Count, organizationGuid);
                
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to load database credentials for organization {OrganizationId}", currentUserOrgId);
                databaseCredentials = new List<DatabaseCredential>();
            }

            Logger.LogInformation("Loaded organization settings for {OrganizationName} ({OrganizationId})", 
                organization.Name, currentUserOrgId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing organization settings page");
            errorMessage = "Error loading organization settings. Please refresh and try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }


    private async Task RefreshSettings()
    {
        if (isRefreshing) return;

        isRefreshing = true;
        ClearMessages();

        try
        {
            Logger.LogInformation("Refreshing organization settings for {OrganizationId}", currentUserOrgId);

            // Reload organization data
            organization = await OrganizationService.GetByIdAsync(currentUserOrgId);
            
            // If organization not found by ID and the ID looks like a domain-based ID, try to find by domain
            if (organization == null && currentUserOrgId.Contains("_"))
            {
                Logger.LogInformation("Refresh: Organization not found by GUID, attempting to find by domain for {OrganizationId}", currentUserOrgId);
                
                // Extract domain from domain-based organization ID (e.g., "erpure_ai" -> "erpure.ai")
                var domain = currentUserOrgId.Replace("_", ".");
                
                // Get all organizations and find the one with matching domain
                var allOrganizations = await OrganizationService.GetAllOrganizationsAsync();
                
                // DEBUG: Log all organizations found
                Logger.LogInformation("Refresh: Found {Count} organizations in database:", allOrganizations.Count());
                foreach (var org in allOrganizations)
                {
                    Logger.LogInformation("Refresh:   Organization: Name='{Name}', Domain='{Domain}', Id={Id}", 
                        org.Name, org.Domain, org.OrganizationId);
                }
                Logger.LogInformation("Refresh: Looking for domain: '{Domain}'", domain);
                
                organization = allOrganizations.FirstOrDefault(o => 
                    string.Equals(o.Domain, domain, StringComparison.OrdinalIgnoreCase));
                
                if (organization != null)
                {
                    Logger.LogInformation("Refresh: Found organization by domain: {OrganizationName} ({OrganizationId}) for domain {Domain}", 
                        organization.Name, organization.OrganizationId, domain);
                    // Update currentUserOrgId to use the actual organization GUID for database operations
                    currentUserOrgId = organization.OrganizationId.ToString();
                }
                else
                {
                    Logger.LogWarning("Refresh: No organization found for domain {Domain}", domain);
                    
                    // FALLBACK: If there's only one organization, use it (useful for development/testing)
                    if (allOrganizations.Count() == 1)
                    {
                        organization = allOrganizations.First();
                        Logger.LogInformation("Refresh: Using single available organization as fallback: {OrganizationName} ({OrganizationId}) - Domain: {Domain}", 
                            organization.Name, organization.OrganizationId, organization.Domain);
                        currentUserOrgId = organization.OrganizationId.ToString();
                    }
                }
            }
            
            if (organization != null)
            {
                // Reload database credentials - handle domain-based organization IDs
                Guid organizationGuid;
                if (!Guid.TryParse(currentUserOrgId, out organizationGuid))
                {
                    // Generate deterministic GUID from domain-based ID (same logic as OrganizationService)
                    using var md5 = System.Security.Cryptography.MD5.Create();
                    var hash = md5.ComputeHash(System.Text.Encoding.UTF8.GetBytes(currentUserOrgId));
                    organizationGuid = new Guid(hash);
                    Logger.LogInformation("RefreshSettings: Generated GUID {GeneratedGuid} from domain-based ID {DomainId}", organizationGuid, currentUserOrgId);
                }
                
                databaseCredentials = await DatabaseCredentialService.GetByOrganizationAsync(organizationGuid);

                successMessage = "Organization settings refreshed successfully.";
                Logger.LogInformation("Successfully refreshed organization settings for {OrganizationId}", currentUserOrgId);
            }
            else
            {
                errorMessage = "Failed to reload organization data.";
                Logger.LogWarning("Organization not found during refresh for ID {OrganizationId}", currentUserOrgId);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error refreshing organization settings for {OrganizationId}", currentUserOrgId);
            errorMessage = "Failed to refresh organization settings. Please try again.";
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }

    private void ClearMessages()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
    }

}