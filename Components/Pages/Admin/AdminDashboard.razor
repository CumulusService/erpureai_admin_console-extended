@page "/admin/dashboard"
@using AdminConsole.Models
@using AdminConsole.Services
@using AdminConsole.Components.Shared
@inject IOnboardedUserService OnboardedUserService
@inject IOrganizationService OrganizationService
@inject IAgentTypeService AgentTypeService
@inject IDataIsolationService DataIsolationService
@inject IDatabaseCredentialService DatabaseCredentialService
@inject IHttpContextAccessor HttpContextAccessor
@inject ILogger<AdminDashboard> Logger
@inject INavigationOptimizationService NavigationOptimizer
@inject NavigationManager Navigation
@attribute [Authorize(Policy = "OrgAdminOrHigher")]
@rendermode InteractiveServer

<PageTitle>Admin Dashboard - Organization Overview</PageTitle>

<FastNavigationWrapper LoadingTitle="Loading Dashboard" 
                       LoadingMessage="Preparing organization overview..." 
                       PagePath="/admin/dashboard"
                       OnDataLoad="LoadDashboardDataAsync">
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 admin-page-title">
            <i class="fas fa-tachometer-alt text-info me-2"></i>
            Admin Dashboard
        </h1>
        <div class="d-flex gap-2">
            <button class="btn btn-secondary btn-sm" @onclick="RefreshDashboard" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                }
                else
                {
                    <i class="fas fa-sync-alt me-1"></i>
                }
                <span class="d-none d-md-inline">Refresh</span>
            </button>
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@activeUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Invitations</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@pendingInvitations</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Agent Types</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@availableAgentTypes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-robot fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions and Recent Activity -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold admin-section-header">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/users" class="btn btn-primary" @onmouseover="@(() => PreloadPage("/admin/users"))">
                            <i class="fas fa-users me-1"></i> Manage Users
                        </a>
                        <a href="/admin/users/invite" class="btn btn-success" @onmouseover="@(() => PreloadPage("/admin/users/invite"))">
                            <i class="fas fa-user-plus me-1"></i> Invite New User
                        </a>
                        <a href="/admin/secrets" class="btn btn-info" @onmouseover="@(() => PreloadPage("/admin/secrets"))">
                            <i class="fas fa-key me-1"></i> Manage Secrets
                        </a>
                        <a href="/admin/database-credentials" class="btn btn-warning" @onmouseover="@(() => PreloadPage("/admin/database-credentials"))">
                            <i class="fas fa-database me-1"></i> Database Credentials
                        </a>
                        <a href="/admin/organization-settings" class="btn btn-secondary" @onmouseover="@(() => PreloadPage("/admin/organization-settings"))">
                            <i class="fas fa-cogs me-1"></i> Organization Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold admin-section-header">Organization Summary</h6>
                </div>
                <div class="card-body">
                    @if (currentOrganization != null)
                    {
                        <div class="mb-3">
                            <h5 class="text-primary">@currentOrganization.Name</h5>
                            <p class="text-muted mb-2">@currentOrganization.Domain</p>
                        </div>
                        
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="border-end">
                                    <h6 class="text-success mb-0">@databaseConnections</h6>
                                    <small class="text-muted">Databases</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="border-end">
                                    <h6 class="text-info mb-0">@totalSecrets</h6>
                                    <small class="text-muted">Secrets</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <h6 class="text-warning mb-0">@(currentOrganization.IsActive ? "Active" : "Inactive")</h6>
                                <small class="text-muted">Status</small>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                Created: @currentOrganization.CreatedOn.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-building fa-2x text-muted mb-2"></i>
                            <p class="text-muted">Loading organization information...</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Users -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold admin-section-header">Recent Users</h6>
                    <a href="/admin/users" class="btn btn-outline-primary btn-sm" @onmouseover="@(() => PreloadPage("/admin/users"))">
                        View All Users
                    </a>
                </div>
                <div class="card-body">
                    @if (recentUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Status</th>
                                        <th>Agent Types</th>
                                        <th>Last Activity</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in recentUsers.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@user.Name</strong>
                                                    <br />
                                                    <small class="text-muted">@user.Email</small>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var statusBadge = GetUserStatusBadge(user);
                                                }
                                                <span class="badge @statusBadge.Class">@statusBadge.Text</span>
                                            </td>
                                            <td>
                                                @if (user.AgentTypeIds?.Any() == true)
                                                {
                                                    <span class="badge bg-info me-1">@user.AgentTypeIds.Count agent types</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None assigned</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @user.ModifiedOn.ToString("MMM dd, HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <a href="/admin/users/@user.OnboardedUserId" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No users found</h5>
                            <p class="text-muted mb-3">Start by inviting your first user to the organization.</p>
                            <a href="/admin/users/invite" class="btn btn-primary">
                                <i class="fas fa-user-plus me-1"></i> Invite User
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Agent Assignment Overview -->
    @if (agentTypeAssignments.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold admin-section-header">Agent Type Assignments</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Agent Type</th>
                                        <th>Users Assigned</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in agentTypeAssignments)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@assignment.DisplayName</strong>
                                                <br />
                                                <small class="text-muted">@assignment.Name</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@assignment.UserCount users</span>
                                            </td>
                                            <td>
                                                <span class="badge @(assignment.IsActive ? "bg-success" : "bg-secondary")">
                                                    @(assignment.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="/admin/users?agentType=@assignment.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-users me-1"></i> View Users
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="/admin/users" class="btn btn-outline-primary btn-sm" @onmouseover="@(() => PreloadPage("/admin/users"))">
                                <i class="fas fa-users-cog me-1"></i> Manage All Agent Assignments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</FastNavigationWrapper>

@code {
    private bool isLoading = false;
    private int totalUsers = 0;
    private int activeUsers = 0;
    private int pendingInvitations = 0;
    private int availableAgentTypes = 0;
    private int databaseConnections = 0;
    private int totalSecrets = 0;
    
    private Organization? currentOrganization;
    private List<OnboardedUser> recentUsers = new();
    private List<AgentTypeAssignment> agentTypeAssignments = new();

    // Fast Navigation Data Loading - called by FastNavigationWrapper
    private async Task LoadDashboardDataAsync()
    {
        await LoadDataAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        // FastNavigationWrapper will handle data loading
        await Task.CompletedTask;
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;
            
            // Try to get cached data first for instant loading
            var cacheKey = $"admin-dashboard-{GetCurrentUserEmail()}";
            var cachedData = NavigationOptimizer.GetCachedData<DashboardData>(cacheKey);
            
            if (cachedData != null)
            {
                // Use cached data for instant loading
                ApplyDashboardData(cachedData);
                Logger.LogDebug("ðŸš€ Using cached admin dashboard data for fast loading");
                StateHasChanged();
            }
            
            // Load fresh data in background
            var freshData = await LoadFreshDashboardDataAsync();
            
            // Cache for future navigations
            NavigationOptimizer.SetCachedData(cacheKey, freshData, TimeSpan.FromMinutes(5));
            
            // Update UI with fresh data
            ApplyDashboardData(freshData);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading admin dashboard data");
            // Show error state but don't crash
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<DashboardData> LoadFreshDashboardDataAsync()
    {
        var data = new DashboardData();
        
        // Get current organization for context
        var organizationId = await DataIsolationService.GetCurrentUserOrganizationIdAsync();
        if (organizationId != null)
        {
            data.CurrentOrganization = await OrganizationService.GetByIdAsync(organizationId);
        }
        
        if (data.CurrentOrganization != null)
        {
            // Get users in organization
            var users = await OnboardedUserService.GetByOrganizationAsync(data.CurrentOrganization.OrganizationId);
            data.RecentUsers = users.OrderByDescending(u => u.ModifiedOn).ToList();
            
            // Calculate metrics
            data.TotalUsers = users.Count;
            data.ActiveUsers = users.Count(u => u.IsActive && u.StateCode == StateCode.Active);
            data.PendingInvitations = users.Count(u => !u.IsActive || u.StateCode == StateCode.Inactive);
            
            // Get available agent types for organization
            var allAgentTypes = await AgentTypeService.GetAllAgentTypesAsync();
            var orgAgentTypeIds = data.CurrentOrganization.GetOrganizationAgentTypeIds();
            var availableAgents = allAgentTypes.Where(at => orgAgentTypeIds.Contains(at.Id)).ToList();
            data.AvailableAgentTypes = availableAgents.Count;
            
            // Calculate agent type assignments
            data.AgentTypeAssignments = availableAgents.Select(at => new AgentTypeAssignment
            {
                Id = at.Id,
                Name = at.Name,
                DisplayName = at.DisplayName,
                IsActive = at.IsActive,
                UserCount = users.Count(u => u.AgentTypeIds?.Contains(at.Id) == true)
            }).ToList();
            
            // Get database connections count
            try
            {
                var dbCredentials = await DatabaseCredentialService.GetByOrganizationAsync(data.CurrentOrganization.OrganizationId);
                data.DatabaseConnections = dbCredentials.Count;
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Could not load database credentials count");
                data.DatabaseConnections = 0;
            }
            
            // Estimate secrets count (placeholder - would need actual Key Vault integration)
            data.TotalSecrets = 5; // Placeholder
        }
        
        return data;
    }

    private void ApplyDashboardData(DashboardData data)
    {
        currentOrganization = data.CurrentOrganization;
        recentUsers = data.RecentUsers;
        totalUsers = data.TotalUsers;
        activeUsers = data.ActiveUsers;
        pendingInvitations = data.PendingInvitations;
        availableAgentTypes = data.AvailableAgentTypes;
        databaseConnections = data.DatabaseConnections;
        totalSecrets = data.TotalSecrets;
        agentTypeAssignments = data.AgentTypeAssignments;
    }

    private async Task RefreshDashboard()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            // Force fresh data load by skipping cache
            var freshData = await LoadFreshDashboardDataAsync();
            
            // Update cache with fresh data
            var cacheKey = $"admin-dashboard-{GetCurrentUserEmail()}";
            NavigationOptimizer.SetCachedData(cacheKey, freshData, TimeSpan.FromMinutes(5));
            
            // Update UI
            ApplyDashboardData(freshData);
            StateHasChanged();
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetCurrentUserEmail()
    {
        return HttpContextAccessor.HttpContext?.User.FindFirst("email")?.Value ?? "";
    }

    private (string Class, string Text) GetUserStatusBadge(OnboardedUser user)
    {
        if (user.IsActive && user.StateCode == StateCode.Active)
            return ("bg-success", "Active");
        else if (user.StateCode == StateCode.Inactive)
            return ("bg-warning", "Pending");
        else
            return ("bg-secondary", "Inactive");
    }

    private void PreloadPage(string pagePath)
    {
        try
        {
            // Preload data in background when user hovers over links
            _ = Task.Run(async () =>
            {
                await NavigationOptimizer.PreloadPageDataAsync(pagePath);
            });
        }
        catch
        {
            // Silently ignore preloading errors
        }
    }

    // Data transfer class for caching
    private class DashboardData
    {
        public Organization? CurrentOrganization { get; set; }
        public List<OnboardedUser> RecentUsers { get; set; } = new();
        public List<AgentTypeAssignment> AgentTypeAssignments { get; set; } = new();
        public int TotalUsers { get; set; }
        public int ActiveUsers { get; set; }
        public int PendingInvitations { get; set; }
        public int AvailableAgentTypes { get; set; }
        public int DatabaseConnections { get; set; }
        public int TotalSecrets { get; set; }
    }

    // Helper class for agent type assignment display
    private class AgentTypeAssignment
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = "";
        public string DisplayName { get; set; } = "";
        public bool IsActive { get; set; }
        public int UserCount { get; set; }
    }
}