@using AdminConsole.Models
@inject IJSRuntime JSRuntime

<div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header @(IsActivation ? "bg-warning" : "bg-danger") text-white">
                <h5 class="modal-title">
                    <i class="fas @(IsActivation ? "fa-exclamation-triangle" : "fa-skull-crossbones") me-2"></i>
                    @(IsActivation ? "REACTIVATE" : "DEACTIVATE") Organization: @OrganizationName
                </h5>
            </div>
            <div class="modal-body">
                @if (!IsActivation)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-skull-crossbones me-2"></i>
                        <strong>⚠️ CRITICAL WARNING - ORGANIZATION DEACTIVATION ⚠️</strong>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>⚠️ ORGANIZATION REACTIVATION WARNING ⚠️</strong>
                    </div>
                }

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-danger">Impact Summary:</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-users text-danger me-2"></i><strong>@UserCount users</strong> will be affected</li>
                            <li><i class="fas fa-building text-info me-2"></i><strong>Organization:</strong> @OrganizationName</li>
                            <li><i class="fas fa-clock text-warning me-2"></i><strong>Effect:</strong> Immediate</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="@(IsActivation ? "text-success" : "text-danger")">What will happen:</h6>
                        @if (IsActivation)
                        {
                            <ul class="list-unstyled text-success">
                                <li><i class="fas fa-check me-2"></i>Azure AD accounts will be <strong>enabled</strong></li>
                                <li><i class="fas fa-check me-2"></i>Users restored to security groups</li>
                                <li><i class="fas fa-check me-2"></i>App roles will be reassigned</li>
                                <li><i class="fas fa-check me-2"></i>Database access will be restored</li>
                                <li><i class="fas fa-check me-2"></i>Teams groups will be restored</li>
                            </ul>
                        }
                        else
                        {
                            <ul class="list-unstyled text-danger">
                                <li><i class="fas fa-times me-2"></i>Azure AD accounts will be <strong>DISABLED</strong></li>
                                <li><i class="fas fa-times me-2"></i>Users removed from ALL security groups</li>
                                <li><i class="fas fa-times me-2"></i>App roles will be revoked</li>
                                <li><i class="fas fa-times me-2"></i>Database access will be blocked</li>
                                <li><i class="fas fa-times me-2"></i>Teams group access will be removed</li>
                            </ul>
                        }
                    </div>
                </div>

                @if (!IsActivation)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>This action will IMMEDIATELY lock out ALL users and cannot be undone without Super Admin intervention!</strong>
                    </div>
                }

                <div class="border p-3 mb-3 bg-light">
                    <h6 class="text-danger mb-3">
                        <i class="fas fa-keyboard me-2"></i>
                        SECURITY CONFIRMATION REQUIRED
                    </h6>
                    <p class="mb-2">
                        To confirm this @(IsActivation ? "reactivation" : "deactivation"), type the organization name exactly as shown:
                    </p>
                    <div class="alert alert-info">
                        <strong>Required Text:</strong> <code>@OrganizationName</code>
                    </div>
                    <input type="text" class="form-control @(IsNameMatched ? "is-valid" : (UserTypedName.Length > 0 ? "is-invalid" : ""))" 
                           @bind="UserTypedName" @oninput="ValidateNameInput" 
                           placeholder="Type the organization name here..." 
                           autocomplete="off" />
                    @if (!IsNameMatched && UserTypedName.Length > 0)
                    {
                        <div class="invalid-feedback">
                            Organization name does not match. Please type exactly: <strong>@OrganizationName</strong>
                        </div>
                    }
                    @if (IsNameMatched)
                    {
                        <div class="valid-feedback">
                            ✅ Organization name confirmed
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ErrorMessage
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@IsProcessing">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn @(IsActivation ? "btn-warning" : "btn-danger")" 
                        @onclick="Confirm" 
                        disabled="@(!IsNameMatched || IsProcessing)">
                    @if (IsProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>@(IsActivation ? "Reactivating..." : "Deactivating...")</span>
                    }
                    else
                    {
                        <i class="fas @(IsActivation ? "fa-play" : "fa-stop") me-2"></i>
                        <span>@(IsActivation ? "REACTIVATE ORGANIZATION" : "DEACTIVATE ORGANIZATION")</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string OrganizationName { get; set; } = "";
    [Parameter] public int UserCount { get; set; }
    [Parameter] public bool IsActivation { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string UserTypedName = "";
    private string ErrorMessage = "";
    private bool IsNameMatched = false;

    private void ValidateNameInput(ChangeEventArgs e)
    {
        UserTypedName = e.Value?.ToString() ?? "";
        IsNameMatched = UserTypedName.Trim().Equals(OrganizationName.Trim(), StringComparison.Ordinal);
        ErrorMessage = "";
        StateHasChanged();
    }

    private async Task Confirm()
    {
        if (!IsNameMatched)
        {
            ErrorMessage = "You must type the organization name exactly as shown to confirm this action.";
            return;
        }

        if (OnConfirm.HasDelegate)
        {
            await OnConfirm.InvokeAsync();
        }
    }

    private async Task Cancel()
    {
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('input[type=text]')?.focus()");
        }
    }
}

<style>
    .modal-header.bg-danger {
        background-color: #dc3545 !important;
    }
    
    .modal-header.bg-warning {
        background-color: #ffc107 !important;
        color: #000 !important;
    }
    
    .form-control.is-valid {
        border-color: #198754;
    }
    
    .form-control.is-invalid {
        border-color: #dc3545;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
        color: #d63384;
    }
</style>