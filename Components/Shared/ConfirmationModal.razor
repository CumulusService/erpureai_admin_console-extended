@*
Modern Confirmation Modal Component
Provides clear, descriptive confirmations for important actions
*@

<div class="modal fade @(IsVisible ? "show" : "")" 
     id="confirmationModal" 
     tabindex="-1" 
     style="display: @(IsVisible ? "block" : "none");"
     data-bs-backdrop="static" 
     data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content confirmation-modal">
            <div class="modal-header border-0 pb-0">
                <div class="d-flex align-items-center">
                    @if (Type == ConfirmationType.Danger)
                    {
                        <div class="confirmation-icon danger me-3">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    }
                    else if (Type == ConfirmationType.Warning)
                    {
                        <div class="confirmation-icon warning me-3">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                    }
                    else if (Type == ConfirmationType.Success)
                    {
                        <div class="confirmation-icon success me-3">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    }
                    else
                    {
                        <div class="confirmation-icon info me-3">
                            <i class="fas fa-info-circle"></i>
                        </div>
                    }
                    <h5 class="modal-title mb-0">@Title</h5>
                </div>
                <button type="button" class="btn-close" @onclick="OnCancel"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(Message))
                {
                    <p class="confirmation-message mb-3">@Message</p>
                }
                
                @if (!string.IsNullOrEmpty(DetailsText))
                {
                    <div class="confirmation-details mb-3">
                        <strong>Details:</strong>
                        <div class="mt-2">@((MarkupString)DetailsText)</div>
                    </div>
                }
                
                @if (Type == ConfirmationType.Danger && !string.IsNullOrEmpty(ConsequenceText))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> @ConsequenceText
                    </div>
                }
                
                @if (RequireConfirmationText)
                {
                    <div class="mb-3">
                        <label class="form-label">
                            <strong>Type "@ConfirmationText" to confirm:</strong>
                        </label>
                        <input type="text" 
                               class="form-control" 
                               @bind="userConfirmationText" 
                               @bind:event="oninput"
                               placeholder="@ConfirmationText" 
                               autocomplete="off">
                    </div>
                }
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" 
                        class="btn btn-secondary" 
                        @onclick="OnCancel"
                        disabled="@IsProcessing">
                    @CancelText
                </button>
                <button type="button" 
                        class="btn @GetConfirmButtonClass()" 
                        @onclick="OnConfirm"
                        disabled="@(IsProcessing || (RequireConfirmationText && !IsConfirmationTextValid))">
                    @if (IsProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    @ConfirmText
                </button>
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string DetailsText { get; set; } = "";
    [Parameter] public string ConsequenceText { get; set; } = "";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public ConfirmationType Type { get; set; } = ConfirmationType.Info;
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public bool IsProcessing { get; set; } = false;
    [Parameter] public bool RequireConfirmationText { get; set; } = false;
    [Parameter] public string ConfirmationText { get; set; } = "DELETE";

    private string userConfirmationText = "";

    private bool IsConfirmationTextValid => 
        !RequireConfirmationText || 
        string.Equals(userConfirmationText.Trim(), ConfirmationText, StringComparison.OrdinalIgnoreCase);

    private string GetConfirmButtonClass()
    {
        return Type switch
        {
            ConfirmationType.Danger => "btn-danger",
            ConfirmationType.Warning => "btn-warning",
            ConfirmationType.Success => "btn-success",
            _ => "btn-primary"
        };
    }

    protected override void OnParametersSet()
    {
        if (!IsVisible)
        {
            userConfirmationText = "";
        }
    }
}

<style>
    .confirmation-modal {
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        border: none;
    }
    
    .confirmation-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }
    
    .confirmation-icon.danger {
        background-color: #fdf2f2;
        color: #dc3545;
    }
    
    .confirmation-icon.warning {
        background-color: #fefbf3;
        color: #ffc107;
    }
    
    .confirmation-icon.success {
        background-color: #f1f8f4;
        color: #28a745;
    }
    
    .confirmation-icon.info {
        background-color: #f0f7ff;
        color: #0d6efd;
    }
    
    .confirmation-message {
        font-size: 16px;
        line-height: 1.5;
        color: #495057;
    }
    
    .confirmation-details {
        background-color: #f8f9fa;
        padding: 16px;
        border-radius: 8px;
        border-left: 4px solid #dee2e6;
    }
</style>